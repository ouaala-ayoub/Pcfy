<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Pc" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_theme</item>
        <item name="colorPrimaryVariant">@color/even_darker_grey</item>
        <item name="colorOnPrimary">@color/color_on_primary</item>
        <item name="colorOnSurface">@color/white_darker</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/main_theme</item>
        <item name="colorSecondaryVariant">@color/orange_font</item>
        <item name="colorOnSecondary">@color/white_darker</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!--background color-->
        <item name="android:colorBackground">@color/background_color</item>
        <!-- Customize your theme here. -->
    </style>
</resources>