<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Pc" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_theme</item>
        <item name="colorPrimaryVariant">@color/white_darker</item>
        <item name="colorOnPrimary">@color/color_on_primary</item>
        <item name="colorOnSurface">@color/even_darker_grey</item>
        <item name="colorSurface">@color/white_darker</item>
        <item name="android:colorBackground">@color/background_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/main_theme</item>
        <item name="colorSecondaryVariant">@color/orange_font</item>
        <item name="colorOnSecondary">@color/white_darker</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/even_darker_grey</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme" parent="Theme.Pc">
        <item name="android:textViewStyle">@style/AlataTextViewStyle</item>
        <item name="android:buttonStyle">@style/AlataButtonStyle</item>
        <item name="textInputStyle">@style/MyCustomTextInputStyle</item>
    </style>

    <style name="AppTheme.NoActionbar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AlataTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/alata</item>
        <item name="android:textColor">@color/color_on_primary</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="AlataButtonStyle" parent="Widget.Material3.Button">
        <item name="android:fontFamily">@font/alata</item>
        <item name="android:background">@color/main_theme</item>
        <item name="android:textColor">@color/color_on_primary</item>
        <item name="android:layout_height">@dimen/buttons_height</item>
    </style>

    <style name="MyCustomTextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="textInputStyle">@font/alata</item>
    </style>

    <style name="AlataTextView" parent="android:Widget.TextView">
        <item name="android:fontFamily">
            @font/alata
        </item>
    </style>

    <!-- chip style-->
    <style name="Widget.MaterialComponents.Chip.Choice.CustomShip" parent="Widget.MaterialComponents.Chip.Choice">

    </style>
</resources>