<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/annonce"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/annonce_drawable"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/annonce_size"
            android:layout_height="@dimen/annonce_size"
            android:layout_gravity="center"
            app:cardCornerRadius="10dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/annonce_image"
                android:layout_width="@dimen/annonce_size"
                android:layout_height="@dimen/annonce_size"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_launcher_background" />
        </androidx.cardview.widget.CardView>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/annonce_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/alata"
            android:gravity="center|start"
            android:lines="2"
            android:maxLines="2"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="product name" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/annonce_seller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:fontFamily="@font/alata"
            android:gravity="center|start"
            android:textSize="15sp"
            tools:text="product seller" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/annonce_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:fontFamily="@font/alata"
            android:gravity="center|start"
            android:textColor="@color/orange_button"
            android:textSize="15sp"
            tools:text="product price" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>