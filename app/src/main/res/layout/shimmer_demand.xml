<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/demand_whole"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/demand_image"
            android:layout_width="@dimen/demand_image_size"
            android:layout_height="@dimen/demand_image_size"
            android:background="@drawable/shimmer_background"
            android:contentDescription="demand_image"
            android:scaleType="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/title_shimmer"
                android:layout_width="@dimen/shimmer_width"
                android:layout_height="@dimen/shimmer_height"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/shimmer_background" />

            <ImageView
                android:id="@+id/price_shimmer"
                android:layout_width="@dimen/shimmer_width"
                android:layout_height="@dimen/shimmer_height"
                android:layout_weight="1"
                android:background="@drawable/shimmer_background" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>